                                            div
                                                h6.fw-bold.mb-3 Awards
                                                p Academic Excellence Award,NCKU 
                                                .small.text-muted Fall 2021, Spring 2022
                                                p
                                                p Taiwan Baseball Data Analysis Competition 
                                                .small.text-muted Finalist
                                                p 

                                                
                                                h6.fw-bold.mb-3 Required Courses
                                                p Computer Project Design (A+)
                                                p Compiler (A+)
                                                p Algorithm (A)
                                                
                                                h6.fw-bold.mb-3 Selective Courses
                                                p The Application of AI on Chinese Medicine (A+)
                                                p Foundations of Spors Analytics: Data, Presentation, and Models in Sports (A+)
                                                p Fundamentals and Applications of Generative AI (A+)
                                                p Convolutional Neural Networks (A+)
                                                
                        // Divider
                        .pb-5

                        // Experience Section
                        section
                            h2.text-primary.fw-bolder.mb-0 Experience
                            // Experience Card 1
                            .card.shadow.border-0.rounded-4.mb-5
                                .card-body.p-5
                                    .row.align-items-center.gx-5
                                        .col.text-center.text-lg-start.mb-4.mb-lg-0
                                            .bg-light.p-4.rounded-4
                                                .text-primary.fw-bolder.mb-2 2021 - Present
                                                .small.fw-bolder Program Assistant
                                                .small.text-muted Ministry of Education
                                                .small.text-muted Tainan, Taiwan
                                        .col-lg-8
                                            div Assist Professor Yi-Chien Peng with the application of motion capture and analysis technology in Prospective Display of Technology and Cross-disciplinary Campus Demonstration Field Project

                        // Skills Section
                        section
                            // Skillset Card
                            .card.shadow.border-0.rounded-4.mb-5
                                .card-body.p-5
                                    // Professional skills list
                                    .mb-5
                                        .d-flex.align-items-center.mb-4
                                            .feature.bg-primary.bg-gradient-primary-to-secondary.text-white.rounded-3.me-3
                                                i.bi.bi-tools
                                            h3.fw-bolder.mb-0
                                                span.text-gradient.d-inline Professional Skills
                                        .row.row-cols-1.row-cols-md-3.mb-4
                                            .col.mb-4.mb-md-0
