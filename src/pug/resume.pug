        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(name='description', content='')
        meta(name='author', content='')

        title Personal - Start Bootstrap Template

        // Favicon
        link(rel='icon', type='image/x-icon', href='assets/favicon.ico')

        include includes/css.pug

    body.d-flex.flex-column.h-100.bg-light

        main.flex-shrink-0

            // Navigation
            include includes/navbar.pug

            // Page Content
            .container.px-5.my-5
                .text-center.mb-5
                    h1.display-5.fw-bolder.mb-0
                        span.text-gradient.d-inline Resume
                .row.gx-5.justify-content-center

                    .col-lg-11.col-xl-9.col-xxl-8

                        // Education Section
                        section
                            .d-flex.align-items-center.justify-content-between.mb-4
                                h2.text-secondary.fw-bolder.mb-4 Education
                                // Download resume button
                                // Note: Set the link href target to a PDF file within your project
                                a.btn.btn-primary.px-4.py-3(href='./assets/resume-Jarvis-Hou.pdf' download)
                                    .d-inline-block.bi.bi-download.me-2
                                    | Download Resume
                            
                            // Education Card 1
                            .card.shadow.border-0.rounded-4.mb-5
                                .card-body.p-5
                                     .row.align-items-center.gx-5
                                        .col.text-center.text-lg-start.mb-4.mb-lg-0
                                            .bg-light.p-4.rounded-4
                                                .text-secondary.fw-bolder.mb-2 2021 - present
                                                .mb-2
                                                    .small.fw-bolder National Cheng Kung University
                                                    .small.text-muted Tainan, Taiwan
                                                .fst-italic
                                                    .small.text-muted Undergraduate
                                                    .small.text-muted Computer Science
